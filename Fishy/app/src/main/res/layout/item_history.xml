<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Gambar -->
        <ImageView
            android:id="@+id/imgHistory"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@drawable/fish" />

        <!-- Konten (Tanggal, Tanaman, dan Hasil) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <!-- LinearLayout untuk Tingkat Kepercayaan -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtNamaIkan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Ikan: "
                    android:fontFamily="@font/dmsans_medium"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvNamaIkan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ikan Gurame"
                    android:fontFamily="@font/dmsans_bold"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- LinearLayout untuk Nama Tanaman -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtHabitat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habitat: "
                    android:fontFamily="@font/dmsans_medium"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvHabitat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Air Tawar"
                    android:fontFamily="@font/urbanist_bold"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Hasil Deteksi -->
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02 Sept 2024"
                android:textSize="14sp"
                android:fontFamily="@font/dmsans_bold"
                android:paddingTop="4dp"
                android:textColor="@color/green" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
